{
  "name": "scottspence.com",
  "private": true,
  "description": "a digital garden",
  "version": "0.1.0",
  "author": {
    "name": "Scott Spence",
    "email": "yo@scottspence.dev",
    "url": "https://scottspence.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "gatsby develop -p 4512 -o",
    "build": "gatsby build && yarn wellknown && yarn robots",
    "serve": "gatsby serve -p 4500 -o",
    "format": "pretty-quick",
    "wellknown": "cp -r .well-known/ public/",
    "robots": "cp robots.txt public/",
    "start": "npm run develop",
    "clean": "gatsby clean",
    "test": "jest",
    "test:dev": "jest --watch",
    "test:e2e:dev": "$(yarn bin)/cypress open",
    "test:e2e": "$(yarn bin)/cypress"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@chakra-ui/gatsby-plugin": "^1.0.0",
    "@chakra-ui/icons": "^1.0.1",
    "@chakra-ui/react": "^1.0.1",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "framer-motion": "^2.9.4",
    "gatsby": "^2.27.3",
    "gatsby-image": "^2.5.0",
    "gatsby-plugin-manifest": "^2.6.1",
    "gatsby-plugin-mdx": "^1.7.0",
    "gatsby-plugin-offline": "^3.4.0",
    "gatsby-plugin-react-helmet": "^3.4.0",
    "gatsby-plugin-sharp": "^2.8.0",
    "gatsby-plugin-ts-config": "^1.1.5",
    "gatsby-remark-autolink-headers": "^2.8.0",
    "gatsby-remark-copy-linked-files": "^2.7.0",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^3.8.0",
    "gatsby-remark-smartypants": "^2.7.0",
    "gatsby-source-filesystem": "^2.6.1",
    "gatsby-transformer-sharp": "^2.6.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "babel-jest": "^26.6.3",
    "babel-preset-gatsby": "^0.9.0",
    "cypress": "^6.1.0",
    "cypress-cucumber-preprocessor": "^4.0.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.1.3"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}
