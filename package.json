{
  "name": "scottspence.com",
  "version": "0.0.1",
  "description": "A digital garden.",
  "main": "index.js",
  "author": "Scott Spence <yo@scottspence.dev>",
  "license": "MIT",
  "scripts": {
    "dev": "gatsby develop -p 4512 -o",
    "build": "gatsby build && npm run wellknown",
    "serve": "gatsby serve -p 4500 -o",
    "format": "pretty-quick",
    "wellknown": "cp -r .well-known/ public/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@mdx-js/mdx": "1.6.1",
    "@mdx-js/react": "1.6.1",
    "@pauliescanlon/gatsby-mdx-embed": "0.0.19",
    "babel-plugin-styled-components": "1.10.7",
    "date-fns": "^2.14.0",
    "gatsby": "2.21.33",
    "gatsby-image": "2.4.3",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-mdx": "1.2.7",
    "gatsby-plugin-sharp": "2.6.3",
    "gatsby-plugin-styled-components": "3.3.1",
    "gatsby-remark-autolink-headers": "^2.3.3",
    "gatsby-remark-images": "3.3.3",
    "gatsby-source-filesystem": "2.3.3",
    "gatsby-transformer-sharp": "2.5.2",
    "mdx-utils": "0.2.0",
    "prism-react-renderer": "1.1.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-live": "2.2.2",
    "styled-components": "5.1.0",
    "styled-reset": "4.1.4"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "printWidth": 70,
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spences10/scottspence.com.git"
  },
  "bugs": {
    "url": "https://github.com/spences10/scottspence.com/issues"
  },
  "homepage": "https://github.com/spences10/scottspence.com#readme"
}
